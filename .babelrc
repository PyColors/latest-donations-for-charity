 {
   "presets": ["env", "react"],
   "env": {
     "development": {
       "plugins": [
         ["react-transform", {
           "transforms": [{
             "transform": "react-transform-hmr",
             "imports": ["react"],
             // this is important for Webpack HMR:
             "locals": ["module"]
           }]
         }]
       ]
     }
   }
 }
 